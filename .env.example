# AI Interview Platform - Environment Variables

# ============================================
# Database Configuration
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=interview_db
DB_USER=interview_user
DB_PASSWORD=your_secure_password_here

# Database URL (alternative to individual settings)
DATABASE_URL=postgresql://interview_user:your_secure_password_here@localhost:5432/interview_db

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# ============================================
# RabbitMQ Configuration
# ============================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=interview
RABBITMQ_PASSWORD=your_rabbitmq_password
RABBITMQ_URL=amqp://interview:your_rabbitmq_password@localhost:5672/

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-characters
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# AI API Keys (comma-separated for rotation)
# ============================================
OPENAI_API_KEYS=sk-your-openai-key-1,sk-your-openai-key-2
GEMINI_API_KEYS=your-gemini-key-1,your-gemini-key-2
ANTHROPIC_API_KEYS=your-anthropic-key-1,your-anthropic-key-2

# Default AI Provider
DEFAULT_AI_PROVIDER=openai
AI_MODEL=gpt-3.5-turbo
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000

# ============================================
# Storage Configuration (S3/Minio)
# ============================================
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=interview-videos
S3_REGION=us-east-1

# ============================================
# Application Configuration
# ============================================
APP_NAME=AI Interview Platform
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=True

# Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_WORKERS=4

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=True

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# ============================================
# Monitoring & Logging
# ============================================
LOG_LEVEL=INFO
SENTRY_DSN=
PROMETHEUS_PORT=9090

# ============================================
# Email Configuration (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@interview.com

# ============================================
# Emotion Service Configuration
# ============================================
EMOTION_SERVICE_HOST=localhost
EMOTION_SERVICE_PORT=8081
EMOTION_MODEL_PATH=./models/xception_emotion.h5
FACE_CASCADE_PATH=./models/haarcascade_frontalface.xml

# ============================================
# Worker Configuration
# ============================================
WORKER_CONCURRENCY=10
WORKER_PREFETCH_COUNT=5
WORKER_MAX_RETRIES=3

# ============================================
# Security
# ============================================
SECRET_KEY=your-secret-key-for-encryption-min-32-chars
ENCRYPTION_KEY=your-encryption-key-for-data-at-rest

# ============================================
# Feature Flags
# ============================================
ENABLE_EMOTION_DETECTION=True
ENABLE_FRAUD_DETECTION=True
ENABLE_AI_SCORING=True
ENABLE_VIDEO_RECORDING=True

# ============================================
# Performance Tuning
# ============================================
DB_POOL_SIZE=25
DB_MAX_OVERFLOW=10
REDIS_POOL_SIZE=10
WORKER_POOL_SIZE=20

# ============================================
# Development Only
# ============================================
RELOAD=True
MOCK_AI_RESPONSES=False
SKIP_AUTH=False
