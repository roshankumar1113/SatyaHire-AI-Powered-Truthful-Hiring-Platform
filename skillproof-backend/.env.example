# Application
APP_NAME=SkillProof AI
VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://skillproof_user:password@localhost:5432/skillproof_db

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI API Keys (Multiple keys for rotation and fallback)
# Format: Comma-separated list of keys
# Example: OPENAI_API_KEYS=sk-key1,sk-key2,sk-key3

# OpenAI (GPT-3.5, GPT-4)
OPENAI_API_KEYS=sk-your-key-1,sk-your-key-2,sk-your-key-3

# Google Gemini
GEMINI_API_KEYS=gemini-key-1,gemini-key-2

# Anthropic Claude
ANTHROPIC_API_KEYS=anthropic-key-1,anthropic-key-2

# AI Configuration
DEFAULT_AI_PROVIDER=openai
AI_MODEL=gpt-3.5-turbo
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000

# AWS
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=skillproof-files

# Email (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@skillproof.ai

# Stripe
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Sentry
SENTRY_DSN=your-sentry-dsn

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://skillproof.ai
